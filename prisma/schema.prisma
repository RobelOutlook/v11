datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  telegramId   String   @unique
  username     String?
  firstName    String?
  lastName     String?
  photoUrl     String?
  languageCode String?
  createdAt    DateTime @default(now())
}